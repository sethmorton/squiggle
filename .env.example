# Replace with your DB credentials!
DATABASE_URL="postgres://user:password@host:port/db-name"

# Enable structured dev logs for grammar pipeline (server-only). Use only in dev.
# 1 = on, 0 or unset = off
SQUIGGLE_DEV_LOG=1

# Grammar/AI config (all optional)
# SQUIGGLE_MODEL=gemini-2.0-flash
# SQUIGGLE_SINGLESHOT_MAX=4500
# SQUIGGLE_MAX_TEXT=100000          # max input length (characters)
# SQUIGGLE_MAX_CONCURRENCY=4        # max parallel LLM chunk requests
# SQUIGGLE_ENABLE_STYLE=1          # set 0 to disable style edits
# SQUIGGLE_ENABLE_OTHER=1          # set 0 to disable category "other"
# SQUIGGLE_STYLE_QUOTA=9999        # emergency cap for style suggestions
# SQUIGGLE_CACHE_MAX=200            # in-memory suggest cache entries
